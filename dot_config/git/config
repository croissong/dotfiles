[user]
  name = Jan Moeller
  email = jan.moeller0@gmail.com
  signingkey = 96A438F9EE72572F
[init]
  defaultBranch = main
[commit]
  template = ~/.config/git/commit_template.txt
  gpgsign = true
[pull]
  rebase = true
[core]
  excludesfile = ~/.config/git/ignore
  pager = bat

[diff]
  submodule = log
  tool = difftastic

[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[diff "json"]
    textconv = "jq ''"
[diff "sopsdiffer"]
  textconv = sops -d

[status]
  submodulesummary = 1
  showuntrackedfiles = normal
[credential]
  helper = /usr/lib/git-core/git-credential-libsecret
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[alias]
  br = branch -vv
  bra = branch -avv
  cm = commit
  co = checkout
  ds = diff --stat
  dc = diff --cached
  hist = log --graph --decorate --date=short --pretty=format:\"%Cblue%h%Creset %C(yellow)%ad%Creset %Cgreen%<(20)%an%Creset\t%s %Cred%d%Creset \"
  ls = ls-files
  mt = mergetool
  root = !pwd
  grepp =  "!f(){ git log -p -S$1 -- $2; }; f"
  st = status -sb
  regexadd = "!f() { git diff --no-ext-diff -U0 \
   | grepdiff -E $1 --output-matching=hunk \
   | git apply --cached --unidiff-zero; }; f"

  # TODO: https://www.atlassian.com/blog/git/advanced-git-aliases

[apply]
  whitespace = warn

[annex]
  resolvemerge = false
  synccontent = true
