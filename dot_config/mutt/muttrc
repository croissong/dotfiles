source /usr/share/mutt-wizard/mutt-wizard.muttrc
source ~/.config/mutt/gpg.rc
source /home/croissong/.config/mutt/accounts/1-jm@iogroup.org.muttrc
macro index,pager i1 '<sync-mailbox><enter-command>source /home/croissong/.config/mutt/accounts/1-jm@iogroup.org.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jm@iogroup.org"

set mailcap_path = ~/.config/mutt/mailcap:$mailcap_path

set recall = no
set edit_headers
set autoedit
set use_threads=yes
set index_format = "%4C %Z %{%b %d} %-15.15L %s" # remove (message size)
set pager_stop=yes

set sidebar_visible = no


bind index,pager \Cs sync-mailbox

bind index,pager x sidebar-toggle-visible

# https://neomutt.org/guide/reference.html#functions
bind index,pager gg noop
bind index,pager g noop
bind index,pager M noop
bind index,pager C noop

bind index gg first-entry
bind index c change-folder
bind index s save-message

bind index,pager a noop
macro index,pager "\e[1;3A" "<sidebar-prev><sidebar-open>"
macro index,pager "\e[1;3B" "<sidebar-next><sidebar-open>"

macro index,pager "a" "<save-message>=Archive"


set query_command = "khard email --parsable %s"
bind editor <Tab> complete-query
bind editor ^T    complete

macro index,pager \Ca \
  "<pipe-message>khard add-email<return>" \
  "add the sender email address to khard"
