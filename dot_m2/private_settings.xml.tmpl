<settings>

  <!-- svh workbench -->
  <servers>
        <server>
            <id>nexus-releases</id>
            <username>
            {{ secretJSON | dig "maven" "server" "user" "" }}
            </username>
            <password>
              {{"{"}}{{ secretJSON | dig "maven" "server" "pass" "" }}{{"}"}}
            </password>
        </server>
        <server>
            <id>nexus-snapshots</id>
            <username>
            {{ secretJSON | dig "maven" "server" "user" "" }}
            </username>
            <password>
              {{"{"}}{{ secretJSON | dig "maven" "server" "pass" "" }}{{"}"}}
            </password>
        </server>
  </servers>
  <!-- end svh workbench -->

  <mirrors>
        <mirror>
            <id>public</id>
            <mirrorOf>*,!Release,!nexus-releases,!nexus-snapshots,!local*</mirrorOf>
            <url>{{ secretJSON | dig "maven" "server" "url" "" }}/nexus/content/repositories/public</url>
        </mirror>
  </mirrors>


  <profiles>


    <profile>
            <id>public</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>nexus</id>
                    <name>nexus repository by telekom, PI, SE, QTS</name>
                    <url>{{ secretJSON | dig "maven" "server" "url" "" }}/nexus/content/repositories/public</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>nexus-releases</id>
                    <name>nexus repository by telekom</name>
                    <url>{{ secretJSON | dig "maven" "server" "url" "" }}/nexus/content/repositories/2ndparty</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>nexus-snapshots</id>
                    <name>nexus repository by telekom</name>
                    <url>{{ secretJSON | dig "maven" "server" "url" "" }}/nexus/content/repositories/snapshots</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>nexus</id>
                    <name>nexus repository by telekom, PI, SE, QTS</name>
                    <url>{{ secretJSON | dig "maven" "server" "url" "" }}/nexus/content/repositories/public</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>

        <!-- end svh workbench -->

        <profile>
            <id>downloadSources</id>
            <properties>
                <downloadSources>true</downloadSources>
                <downloadJavadocs>true</downloadJavadocs>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>downloadSources</activeProfile>
    </activeProfiles>
</settings>
